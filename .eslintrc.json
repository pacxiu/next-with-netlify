{
  "env": {
    "browser": true
  },
  "extends": [
    "airbnb",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["simple-import-sort", "prettier", "@typescript-eslint", "unused-imports"],
  "parser": "@typescript-eslint/parser",
  "globals": {
    "__NEXT_DATA__": "writeable",
    "React": "readable",
    "JSX": "readable",
    "RequestInit": "readable"
  },
  "rules": {
    "unused-imports/no-unused-imports-ts": "error",
    "simple-import-sort/sort": [
      "error",
      {
        "groups": [
          // Side effect imports.
          ["^\\u0000"],
          // Packages.
          // Things that start with a letter (or digit or underscore), or `@` followed by a letter.
          ["^@?\\w"],
          // Absolute imports and other imports such as Vue-style `@/foo`.
          // Anything that does not start with a dot.
          ["^[^.]"],
          // Relative imports.
          // Anything that starts with a dot.
          // anything that stars with /src (out custom path)
          ["(^\\.|src/)"]
        ]
      }
    ],
    "arrow-parens": [0, "as-needed", { "requireForBlockBody": true }],
    "class-methods-use-this": 0,
    "consistent-return": 0,
    "max-len": 0,
    "object-curly-newline": 0,
    "linebreak-style": 0,
    "semi": 1,
    "no-shadow": 0,
    "no-nested-ternary": 0,
    "no-alert": 0,
    "no-confusing-arrow": 0,
    "no-underscore-dangle": 0,
    "camelcase": 0,
    "no-unused-vars": 1,
    "no-console": [1, { "allow": ["warn", "error", "info"] }],
    "no-param-reassign": ["error", { "props": false }],
    "no-await-in-loop": 0,
    "import/no-named-as-default": 0,
    "import/extensions": 0,
    "import/first": 0,
    "import/order": 0,
    "import/prefer-default-export": 0,
    "import/no-unresolved": 0,
    "react/prop-types": 0,
    "react/button-has-type": 0,
    "react/jsx-wrap-multilines": 0,
    "react/jsx-one-expression-per-line": 0,
    "react/require-default-props": 0,
    "react/destructuring-assignment": 0,
    "react/no-array-index-key": 1,
    "react/prefer-stateless-function": 1,
    "react/no-unused-state": 1,
    "react/jsx-fragments": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx", ".tsx"] }],
    "react/state-in-constructor": 0,
    "react/jsx-props-no-spreading": 0,
    "jsx-a11y/label-has-for": 0,
    "jsx-a11y/label-has-associated-control": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/no-noninteractive-element-interactions": 0,
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["to", "hrefLeft", "hrefRight"],
        "aspects": ["noHref", "invalidHref", "preferButton"]
      }
    ],
    "@typescript-eslint/explicit-module-boundary-types": 0,
    "@typescript-eslint/ban-ts-comment": 0,
    "@typescript-eslint/no-explicit-any": 0,
    "@typescript-eslint/no-use-before-define": 0,
    "no-use-before-define": 0
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["./src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
